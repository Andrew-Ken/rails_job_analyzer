= form_for @review do |f|
  -if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :job
    = f.text_field :job
  .field
    = f.label :memo
    = f.text_area :memo
  .field
    = f.label :rank
    = f.number_field :rank
  .field
    = f.label :applied
    = f.check_box :applied
  .actions
    = f.submit 'Save'
