= form_for @job do |f|
  -if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :web_source
    = f.text_field :web_source
  .actions
    = f.submit 'Save'
