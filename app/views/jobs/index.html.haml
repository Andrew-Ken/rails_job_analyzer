- model_class = Job
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:company)
      %th= model_class.human_attribute_name(:location)
      -#%th= model_class.human_attribute_name(:content)
      -#%th= model_class.human_attribute_name(:web_source)
      -#%th= model_class.human_attribute_name(:uuid)
      -#%th= model_class.human_attribute_name(:detail_url)
      -#%th= model_class.human_attribute_name(:created_at)
      -#%th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @jobs.each do |job|
      %tr
        %td= link_to job.id, job_path(job)
        %td= link_to job.name, job_path(job)
        %td= job.company
        %td
          = truncate job.location, lenght: 27
          %br
          = truncate job.content, length: 27
        -#%td= truncate job.content, length: 27
        -#%td= job.web_source
        -#%td= job.uuid
        -#%td= job.detail_url
        -#%td=l job.created_at.strftime("%Y")
        -#%td
          -#= link_to t('.edit', :default => t("helpers.links.edit")), edit_job_path(job), :class => 'btn btn-mini'
          -#= link_to t('.destroy', :default => t("helpers.links.destroy")), job_path(job), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

-#= link_to t('.new', :default => t("helpers.links.new")), new_job_path, :class => 'btn btn-primary'
